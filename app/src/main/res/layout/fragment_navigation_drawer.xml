<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:layout_gravity="start"
    android:background="@android:color/white">

    <FrameLayout
        android:id="@+id/containerDrawerImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_weight="35">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/dota1"
            app:border_color="#FF000000"
            app:border_width="2dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:alpha="0.55"
            android:background="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Özcan Candağ"
            android:layout_marginBottom="10dp"
            android:textColor="#f5f5f5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="ozcancandag@gmail.com"
            android:textColor="#f5f5f5" />
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawerList"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="18"
        />
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="46.3">
<AutoCompleteTextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_search_friend"
    android:hint="Arkadaşlarda ara"
    android:textColorHint="@color/material_blue_grey_800"
    />
</FrameLayout>
</LinearLayout>
